<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="@ViewData["Description"]"/>
    <meta name="keywords" content="@ViewData["Keywords"]"/>

    <title>@ViewData["Title"] - Raw Coding</title>

    <partial name="_Bulma"/>
    @await RenderSectionAsync("Styles", required: false)

</head>
<body class="bkg-black">

<div class="hero">
    <div class="hero-body flex-column align-center">
        <a class="logo" href="/">
            <img src="~/logo_150x150.png" height="150">
        </a>
        <p class="text-white is-size-1 is-size-3-mobile is-uppercase">raw coding</p>
    </div>
</div>

<div class="container">
    @RenderBody()
</div>

@* <script src="~/lib/promises.js" asp-append-version="true"></script> *@
<partial name="_Cart"/>
<partial name="_CookieConsentPartial"/>
<partial name="_Vue"/>
<script src="~/lib/axios.js" asp-append-version="true"></script>
<script src="~/lib/modal-fx.min.js" asp-append-version="true"></script>
<script src="~/js/cart.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>