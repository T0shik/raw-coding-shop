<div style="width: 100%; background-color: #1B0F1E; padding: 2rem 0;">
    <table style="margin: 0 auto;">
        <tbody>
        <tr>
            <td colspan="4" style="font-size: 2rem; padding: 0 5rem;">
                <div style="text-align: center; position: relative">
                    <img src="https://aw-test-bucket.eu-central-1.linodeobjects.com/raw-coding-shop/logo.png"
                         style="width: 100px !important;" alt="">
                    <div style="color: #fff;">
                        RAW CODING
                    </div>
                </div>
            </td>
        </tr>
        <tr style="height: 55px; border-top: 1px solid lavender">
            <td colspan="4"
                style="color: #fff; font-weight: bold; font-size: 1.5rem; text-align: center; padding-top: .5rem;">Order Summary
            </td>
        </tr>

        {% for product in Products %}
            <tr style="@styles">
                <td colspan="1" style="width: 100px; height: 100px;">
                    <img src="{{ product.DefaultImage }}" style="width: 100px !important; height: 100px !important;"
                         alt="">
                </td>
                <td colspan="2" style="padding: 0 0.5rem;">
                    <div style="color: #fff; font-weight: bold; font-size: 14px;">{{ product.Name }}</div>
                    <div style="color: #c0c0c0; font-size: 13px;">{{ product.Description }}</div>
                    {% if product.StockDescription and product.StockDescription != '' %}
                        <div style="color: #fff; font-size: 12px;"> {{ product.StockDescription }}
                            - {{ product.StockText }}</div>
                    {% endif %}
                </td>
                <td colspan="1" style="color: #fff; width: 100px; height: 100px;">
                    {{ product.Total }}
                </td>
            </tr>
        {% endfor %}
        <tr style="height: 55px; border-top: 1px solid lavender">
            <td colspan="2"
                style="color: #fff; font-weight: bold; font-size: 1.2rem; padding: .5rem 2rem 0;">
                Delivery Information
            </td>
            <td colspan="2"
                style="color: #fff; font-weight: bold; font-size: 1.2rem; padding: .5rem 2rem 0;">
                Contact Information
            </td>
        </tr>
        <tr>
            <td colspan="2" style="color: #fff; padding: 0 2rem;">{{ Address1 }}, {{ Address2 }}</td>
            <td colspan="2" style="color: #fff; padding: 0 2rem;">{{ Name }}</td>
        </tr>
        <tr>
            <td colspan="2" style="color: #fff; padding: 0 2rem;">{{ City }}</td>
            <td colspan="2" style="color: #fff; padding: 0 2rem;">{{ Email }}</td>
        </tr>
        <tr>
            <td colspan="2" style="color: #fff; padding: 0 2rem;">{{ Country }}</td>
            <td colspan="2" style="color: #fff; padding: 0 2rem;">{{ Phone }}</td>
        </tr>
        {% if State and State != '' %}
            <tr>
                <td colspan="4" style="color: #fff; padding: 0 2rem;">{{ State }}</td>
            </tr>
        {% endif %}
        <tr>
            <td colspan="4" style="color: #fff; padding: 0 2rem;">{{ PostCode }}</td>
        </tr>
        </tbody>
    </table>
</div>