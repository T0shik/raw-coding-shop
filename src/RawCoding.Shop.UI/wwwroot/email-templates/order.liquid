<div style="width: 100%; background-color: #1B0F1E;">
    <table style="margin: 0 auto;">
        <tbody>
        <tr>
            <td colspan="3" style="font-size: 2rem; padding: 0 5rem;">
                <div style="text-align: center; position: relative">
                    <img src="https://aw-test-bucket.eu-central-1.linodeobjects.com/raw-coding-shop/logo.png" style="width: 100px !important;" alt="">
                    <div style="color: #fff;">
                        RAW CODING
                    </div>
                </div>
            </td>
        </tr>
        <tr style="height: 55px; border-top: 1px solid lavender">
            <td colspan="3"
                style="color: #fff; font-weight: bold; font-size: 1.5rem; text-align: center; padding-top: .5rem;">Order
                Summary
            </td>
        </tr>
        <tr style="height: 55px; border-top: 1px solid lavender">
            <td colspan="3"
                style="color: #fff; font-weight: bold; font-size: 1.5rem; text-align: center; padding-top: .5rem;">
                Products
            </td>
        </tr>

        {% for product in Products %}
            <tr style="@styles">
                <td style="padding-left: 5rem;">
                    <img src="{{ product.DefaultImage }}" style="width: 100px !important; height: 100px !important;" alt="">
                </td>
                <td style="padding: 0 0.5rem;">
                    <p style="color: #fff; font-weight: bold;">{{ product.Name }}</p>
                    <p style="color: #c0c0c0; font-size: 13px;">{{ product.Description }}</p>
                    {% if product.StockDescription and product.StockDescription != '' %}
                        <p style="color: #fff; font-size: 14px;"> {{ product.StockDescription }} - {{ product.StockText }}</p>
                    {% endif %}
                </td>
                <td style="color: #fff; padding-right: 5rem;">
                    {{ product.Total }}
                </td>
            </tr>
        {% endfor %}
        <tr style="height: 55px; border-top: 1px solid lavender">
            <td colspan="3"
                style="color: #fff; font-weight: bold; font-size: 1.5rem; text-align: center; padding-top: .5rem;">
                Delivery Information
            </td>
        </tr>
        </tbody>
    </table>
</div>